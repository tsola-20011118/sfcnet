<div class="topAll">
    <div class="mypageAll">
        <div class="mypagepage">
            <h1 class="mypagep"><%=@pageuser.name%>'s PAGE</h1>
            <h1 class="mypagep">名前：<%=@pageuser.name%></h1>
            <p class="mypagep">年齢：<%=@pageuser.age%></p>
            <p class="mypagep">メール：<%=@pageuser.mail%></p>
            <% if @pageuser == @user%>
            <p class="mypagep">パスワード：<%=@password%></p>
            <%end%>
            <p class="mypagep">性別：
            <%if @pageuser.sex == 1 %>
            男
            <%else%>
            女
            <%end%>
            </p>
        </div>
        <div class="mypageselect">
        <% if @pageuser == @user%>
                <div class="userIndex">
                    <%= link_to( "EDIT" ,  "/user/#{@pageuser.id}/edit", class: "matchbutton" )%>
                </div>  
                <div class="userIndex">
                    <%= link_to( "USER DELETE" ,  "/user/#{@pageuser.id}/destroy", class: "matchbutton" )%>
                </div>
                <div class="userIndex">
                    <%= link_to( "LOGOUT" ,  "/user/logout", class: "matchbutton")%>
                </div>
            <%else%>
                <div class="notuserIndex">
                    <p><%= link_to( "MESSAGE" ,  "/user/talk/#{@pageuser.id}", class: "matchbutton")%></p>
                </div>
            <%end%>
        </div>
    </div>
</div>